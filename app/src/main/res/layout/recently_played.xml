<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/recently_played_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/baby_pink01"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        app:cardCornerRadius="14dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:id="@+id/image_recently_played"-->
<!--                android:layout_width="102dp"-->
<!--                android:layout_height="102dp"-->
<!--                android:background="@drawable/img"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:paddingEnd="7dp"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="center_vertical"
                android:paddingEnd="7dp"/>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/songname_recently_played"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="songname recent"
                    android:textSize="18sp"
                    android:textColor="@color/darkgrey_primarybg" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/duration_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00 â€¢"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/artistname_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:text=" artist name"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>